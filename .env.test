# Server Configuration 
PORT=5002
NODE_ENV=test
LOG_LEVEL=error

# Database Configuration
# Use in-memory or local test database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/test_db

# JWT Configuration
JWT_SECRET=test_secret_key_for_jwt_do_not_use_in_production
JWT_EXPIRES_IN=1h

# Disable External Services in Test
SENDGRID_API_KEY=test
TWILIO_ACCOUNT_SID=test
TWILIO_AUTH_TOKEN=test
TWILIO_PHONE_NUMBER=test
GOOGLE_MAPS_API_KEY=test
STRIPE_SECRET_KEY=test
STRIPE_WEBHOOK_SECRET=test

# Simplified Firebase Config for Testing
FIREBASE_CREDENTIALS='{}'

# Disable Backups in Test
BACKUP_RETENTION_DAYS=1

# Rate Limiting - High Values for Testing
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration for Testing
CORS_ORIGIN=*

# Disable Monitoring in Test
ENABLE_PROMETHEUS=false
